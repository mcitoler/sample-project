# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line=lf
insert_final_newline=true

[*.yml]
indent_type=space
indent_size=4

[*.py]
indent_type=space
indent_size=4

[Makefile]
indent_style=tab

[Dockerfile]
indent_type=space
indent_size=4
